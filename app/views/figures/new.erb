<h1>Enter a New Historical Figure</h1>

<form action="/figures" method="POST">
  <p>Name: <input type="text" name="figure[name]" id="figure_name"></p>

  <p>Choose any associated landmarks</p>
  <label name="landmarks"></label>
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id%>" id="landmark_<%=landmark.id%>">
      <%= landmark.name%>
    </input>
    
  <%end%>

  <p>Create a New Landmark</p>
  <p>Name: <input type="text" name="landmark[name]" id="new_landmark"></p>
  <p>Date: <input type="text" name="landmark[year_completed]"></p>


  <p>Choose any associated titles</p>
  <label name="titles"></label>
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id%>" id="title_<%=title.id%>">
      <%= title.name%>
    </input>
  <%end%>

  <p>Create a New Title</p>
  <p>Name: <input type="text" name="title[name]" id="new_title"></p>

  <input type="submit" id="Create New Figure" value="Create New Figure">
</form>
